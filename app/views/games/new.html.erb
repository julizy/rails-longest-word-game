<h1>New game</h1>
<ul>
  <% @letters.each do |letter| %>
  <li class="list"><div class="item"><%= letter.capitalize %></div></li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <div class="d-flex">
    <input type="text" name="word" class="p-2 form-control">
    <input type="submit" value="Play" class="p-2 btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="grid" name="grid" type="hidden" value= "<%= @letters%>" />
  </div>
</form>
